package com.anu.info;

public class ReverseString {

	
	
	
	public static void main(String[] args) {
		
		String str="BAHUBALI";
		String rev="";
		for(int i=str.length()-1;i>=0;i--) {
			rev=rev+str.charAt(i);
		}
		System.out.println(rev + "reverse of given string");
		
		StringBuffer br=new StringBuffer(str);
		System.out.println(br.reverse() + " using the StringBuffer class");
		
		StringBuilder bb =new StringBuilder(str);
		System.out.println(bb.reverse() + " using the StringBuffer class");
		
		
	}
}
