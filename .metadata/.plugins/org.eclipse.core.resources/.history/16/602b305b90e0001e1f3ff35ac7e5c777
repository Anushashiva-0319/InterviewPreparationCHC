public class Pattern {

	public static void main(String[] args) {

		int a[] = { 1, 2, 3, 4 };
		int b[] = new int[];

		reverse(a);

	}

	private static void reverse(int[] a) {
		int start = 0;
		int end = a.length - 1;
		int temp = 0;
		temp = a[start];
		a[start] = a[end];
		a[end] = temp;

		start++;
		end--;
	}

}
